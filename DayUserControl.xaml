<UserControl x:Class="calendar.DayUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:calendar"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Button x:Name="DayNum" Grid.RowSpan="2" Margin="10" Background="{x:Null}" BorderBrush="Teal" Height="80" Width="80" Foreground="Teal">
            <StackPanel Orientation="Vertical">
                <ContentControl x:Name="Number" Content="1" Height="20"  FontSize="16" HorizontalAlignment="Center"/>
                <Image x:Name="Image" Source="/images/dots.png" Height="40" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
